{
  "name": "xray-genius",
  "private": true,
  "engines": {
    "node": "18.x"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.17",
    "daisyui": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.11.0",
    "postcss": "^8.4.33",
    "remixicon": "^4.1.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1"
  },
  "scripts": {
    "postinstall": "npm --prefix viewer install",
    "build": "npm-run-all --sequential build:clean build:parcel build:viewer",
    "build:clean": "rimraf ./xray_genius/core/static/core/dist",
    "build:parcel": "parcel build",
    "build:viewer": "NPM_CONFIG_PRODUCTION=false npm --prefix viewer install && npm --prefix viewer run build",
    "heroku-cleanup": "rm -rf ./viewer/node_modules && rm -rf /app/.heroku/node",
    "start": "npm-run-all --parallel start:parcel start:viewer",
    "start:parcel": "parcel watch",
    "start:viewer": "npm --prefix viewer run dev -- --clearScreen false"
  },
  "targets": {
    "styles": {
      "source": "./node-src/styles.pcss",
      "distDir": "./xray_genius/core/static/core/dist"
    }
  },
  "browserslist": "> 0.5%",
  "postcss": {
    "plugins": {
      "postcss-nested": {},
      "tailwindcss": {}
    }
  }
}
